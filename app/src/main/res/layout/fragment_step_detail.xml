<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_height"
        android:background="@color/colorBackground"
        android:padding="@dimen/relative_layout_padding">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/playerview_recipe_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/imageview_no_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/colorAccent"
            android:contentDescription="@string/no_image_view"
            android:padding="@dimen/image_view_padding"

            />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_view_step_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_view_description_padding"
        android:textSize="@dimen/text_view_description_text_size"
        tools:text="Short description" />

</LinearLayout>