<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/step_short_description"
        style="@style/step_list_item_step_short_description"
        android:layout_margin="@dimen/step_list_item_margin"
        android:padding="@dimen/step_list_item_margin"
        android:textSize="@dimen/step_list_item_text_size"
        android:text="@string/step_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_margin="@dimen/step_list_item_margin"
        android:background="@color/colorBackground"
        android:layout_below="@id/step_short_description" />

</android.support.constraint.ConstraintLayout>